---
layout: none
permalink: /feed/system.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
<channel>
  <title>Hotfixes - System</title>
  <link>{{ site.url }}{{ site.baseurl }}{{ fix.url }}</link>
  <description>RSS feed for System hotfixes</description>
  {% assign fixes = site.hotfixes | where: "product", "System" %}
  {% for fix in fixes %}
  <item>
    <title>{{ fix.title }}</title>
    <link>{{ site.url }}{{ site.baseurl }}{{ fix.url }}</link>
    <pubDate>{{ "now" | date_to_rfc822 }}</pubDate>
    <guid>{{ fix.guid }}</guid>
    <description><![CDATA[{{ fix.content | markdownify | remove: '<p>' | remove: '</p>' }}]]></description>
  </item>
  {% endfor %}
</channel>
</rss>
